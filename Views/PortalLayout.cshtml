@inherits UmbracoTemplatePage
@{
    Layout = null;
}
<!DOCTYPE HTML>
<html>
<head>
    <title>@ViewBag.Title | @ViewBag.SiteName</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
    <!--[if lte IE 8]><script src="/js/html5shiv.js"></script><![endif]-->
    <link rel="stylesheet" href="/css/portal/main.css" />
    <!--[if lte IE 9]><link rel="stylesheet" href="/css/ie9.css" /><![endif]-->
    <!--[if lte IE 8]><link rel="stylesheet" href="/css/ie8.css"/><![endif]-->
</head>
<body>

    <!-- Wrapper -->
    <div id="wrapper">

        <!-- Main -->
        <div id="main">
            <div class="inner">

                <!-- Header -->
                <header id="header" style="padding: 1em 0 0">
                    <div class="col-md-7 fadeInLeft animated animated" data-wow-delay=".5s" style="visibility: visible; animation-delay: 0.5s; animation-name: fadeInLeft;">
                        <a href="/" class="logo"><img src="/images/jxp_small.png" width="170" /></a>
                    </div>
                    <div class="col-md-5 details wow fadeInRight animated animated" data-wow-delay=".5s" style="visibility: visible; animation-delay: 0.5s; animation-name: fadeInRight;">
                        <ul class="icons" style="margin-bottom: 0.5em">
                            <li><a class="icon fa-facebook" href="#"><span class="label">Facebook</span></a></li>
                            <li><a class="icon fa-twitter" href="#"><span class="label">Twitter</span></a></li>
                            <li><a class="icon fa-google" href="#"><span class="label">Google</span></a></li>
                            @{
                                Html.RenderPartial("~/Views/Partials/AuthenticationForm.cshtml");
                            }
                        </ul>
                        <ul class="icons info">
                            <li><i class="fa fa-home" aria-hidden="true"></i> 4476 W. 12th Street, Houston, Texas 77055 </li>
                            <li><i class="fa fa-envelope" aria-hidden="true"></i> <a href="mailto:admin@gojxp.com">admin@gojxp.com</a></li>
                            <li><i class="fa fa-phone" aria-hidden="true"></i>713-464-6374</li>
                        </ul>
                    </div>
                </header>
                @RenderBody()

            </div>
        </div>

    </div>
    <footer id="footer" class="fadeInUp animated animated" data-wow-delay=".5s" style="visibility: visible; animation-delay: 0.5s; animation-name: fadeInUp; text-align: center; background: #f5f6f7">
        <p style="margin: 0;padding: 2em 0;">© @DateTime.Now.Year JXP System. All rights reserved</p>
    </footer>
    <!-- Scripts -->
    <script src="/js/jquery.min.js"></script>
    <script src="/js/skel.min.js"></script>
    <link href="/css/animate.min.css" rel="stylesheet">
    <script src="/js/portal/util.js"></script>
    <!--[if lte IE 8]><script src="/js/respond.min.js"></script><![endif]-->
    <script src="/js/portal/main.js"></script>

</body>
</html>