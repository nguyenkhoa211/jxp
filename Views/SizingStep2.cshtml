@inherits UmbracoViewPage<SizingModel>
@{
    Layout = "PortalLayout.cshtml";
}

<section>
    <header class="main">
        <h1>@Model.ProductName</h1>
    </header>
    <div class="row">
        <div class="row uniform box 5u 12u$(small)" style="margin-right: 40px">
            <div class="12u 12u$(small)">
                <h3>JXP @Model.ProductName Sizing Step 1:</h3>
            </div>
            <div class="4u 12u$(small)">
                <span>Operating Temp:</span>
            </div>
            <div class="4u 12u$(small)">
                <span>@Model.UnitTemp</span>
            </div>
            <div class="4u$ 12u$(small)">
                <span>@Model.CTemp</span>
            </div>
            <!-- Break -->
            <div class="4u 12u$(small)">
                <span>Operating Pressure:</span>
            </div>
            <div class="4u 12u$(small)">
                <span>@Model.UnitPress</span>
            </div>
            <div class="4u$ 12u$(small)">
                <span>@Model.CPress</span>
            </div>
            <!-- Break -->
            <div class="4u 12u$(small)">
                <span>Comp Factor,Z</span>
            </div>
            <div class="4u 12u$(small)">

            </div>
            <div class="4u$ 12u$(small)">
                <span>@Model.CZcomp</span>
            </div>
            <!-- Break -->
            <div class="4u 12u$(small)">
                <span>Gas Density:</span>
            </div>
            <div class="4u 12u$(small)">
                <span>@Model.UnitDenG</span>
            </div>
            <div class="4u$ 12u$(small)">
                <span>@Model.CDenG</span>
            </div>
            <!-- Break -->
            <div class="4u 12u$(small)">
                <span>Gas Viscosity:</span>
            </div>
            <div class="4u 12u$(small)">
                <span>@Model.UnitViscG</span>
            </div>
            <div class="4u$ 12u$(small)">
                <span>@Model.CViscG</span>
            </div>
            <!-- Break -->
            <div class="4u 12u$(small)">
                <span>Liquid Density:</span>
            </div>
            <div class="4u 12u$(small)">
                <span>@Model.UnitDenL</span>
            </div>
            <div class="4u$ 12u$(small)">
                <span>@Model.CDenL</span>
            </div>
            <!-- Break -->
            <div class="4u 12u$(small)">
                <span>Liquid Viscosity:</span>
            </div>
            <div class="4u 12u$(small)">
                <span>@Model.UnitViscL</span>
            </div>
            <div class="4u$ 12u$(small)">
                <span>@Model.CViscL</span>
            </div>
            <!-- Break -->
            <div class="4u 12u$(small)">
                <span>Gas Flowrate:</span>
            </div>
            <div class="4u 12u$(small)">
                <span>@Model.UnitFlowG</span>
            </div>
            <div class="4u$ 12u$(small)">
                <span>@Model.CQGas</span>
            </div>
            <!-- Break -->
            <div class="4u 12u$(small)">
                <span>Liquid Flowrate:</span>
            </div>
            <div class="4u 12u$(small)">
                <span>@Model.UnitFlowL</span>
            </div>
            <div class="4u$ 12u$(small)">
                <span>@Model.CQLiq</span>
            </div>
            <!-- Break -->
            <div class="4u 12u$(small)">
                <span>Element Requested:</span>
            </div>
            <div class="8u$ 12u$(small)">
                <span>@Model.JHFSELEM</span>
            </div>
            <!-- Break -->
            <div class="4u 12u$(small)">
                <span>Separator Style:</span>
            </div>
            <div class="8u$ 12u$(small)">
                <span>@Model.JHFSSEP</span>
            </div>
        </div>

        <div class="row uniform box 7u 12u$(small)">
            <div class="12u 12u$(small)">
                <h3>The minimum recommended dimensions are as follows:</h3>
                @Html.HiddenFor(m => m.ProductId)
                @Html.HiddenFor(m => m.ProductName)
                @Html.HiddenFor(m => m.SizingName)
            </div>
            <div class="4u 12u$(small)">
                <span>Element Style:</span>
            </div>
            <div class="8u$ 12u$(small)">
                @Html.TextBoxFor(m => m.JHFSELEM, new { @readonly = "readonly", @style = "text-align: center; background: aliceblue; border-color: aliceblue" })
            </div>
            <!-- Break -->
            <div class="4u 12u$(small)">
                <span>Minimum Number of Elements:</span>
            </div>
            <div class="8u$ 12u$(small)">
                @Html.TextBoxFor(m => m.NumElem, new { @readonly = "readonly", @style = "text-align: center; background: aliceblue; border-color: aliceblue" })
            </div>
            <!-- Break -->
            <div class="4u 12u$(small)">
                <span>Minimum Vessel ID:</span>
            </div>
            <div class="8u$ 12u$(small)">
                @Html.TextBoxFor(m => m.JHFSELEM, new { @readonly = "readonly", @style = "text-align: center; background: aliceblue; border-color: aliceblue" })
            </div>
            <!-- Break -->
            <div class="4u 12u$(small)">
                <span>Recommended Nozzle ID:</span>
            </div>
            <div class="8u$ 12u$(small)">
                @Html.TextBoxFor(m => m.JHFSELEM, new { @readonly = "readonly", @style = "text-align: center; background: aliceblue; border-color: aliceblue" })
            </div>
            <!-- Break -->
            <div class="4u 12u$(small)">
                <span>Selected Vessel ID:</span>
            </div>
            <div class="4u 12u$(small)">

            </div>
            <div class="4u$ 12u$(small)">
                @Html.TextBoxFor(m => m.CVESSELID, new { type = "number", min = "0.001", step = "0.001" })
            </div>
            <!-- Break -->
            <div class="4u 12u$(small)">
                <span>Selected Number of Elements:</span>
            </div>
            <div class="4u 12u$(small)">

            </div>
            <div class="4u$ 12u$(small)">
                @Html.TextBoxFor(m => m.CNUMELEM, new { type = "number", min = "0.001", step = "0.001" })
            </div>
            <!-- Break -->
            <div class="4u 12u$(small)">
                <span>Selected Nozzle ID:</span>
            </div>
            <div class="4u 12u$(small)">

            </div>
            <div class="4u$ 12u$(small)">
                @Html.TextBoxFor(m => m.CNOZZLEID, new { type = "number", min = "0.001", step = "0.001" })
            </div>
            <!-- Break -->
            <div class="4u 12u$(small)">
                <span>Selected Nozzle OD at Body:</span>
            </div>
            <div class="4u 12u$(small)">

            </div>
            <div class="4u$ 12u$(small)">
                @Html.TextBoxFor(m => m.CNOZZLEOD, new { type = "number", min = "0.001", step = "0.001" })
            </div>
            <!-- Break -->
            <div class="4u 12u$(small)">
                <span>Minimum Weld to Weld Distance:</span>
            </div>
            <div class="4u 12u$(small)">

            </div>
            <div class="4u$ 12u$(small)">
                @Html.TextBoxFor(m => m.CMINWELDGAP, new { type = "number", min = "0.001", step = "0.001" })
            </div>
            <!-- Break -->
            <div class="4u 12u$(small)">
                <span>Riser Material of Construction:</span>
            </div>
            <div class="4u 12u$(small)">

            </div>
            <div class="4u$ 12u$(small)">
                @Html.TextBoxFor(m => m.CMOCRISER, new { type = "number", min = "0.001", step = "0.001" })
            </div>
            <!-- Break -->
            <div class="4u 12u$(small)">
                <span>Separator Material of Construction:</span>
            </div>
            <div class="4u 12u$(small)">

            </div>
            <div class="4u$ 12u$(small)">
                @Html.TextBoxFor(m => m.CMOCSEP, new { type = "number", min = "0.001", step = "0.001" })
            </div>
            <!-- Break -->
            <div class="4u 12u$(small)">
                <span>Picking and Passivating Required:</span>
            </div>
            <div class="4u 12u$(small)">

            </div>
            <div class="4u$ 12u$(small)">
                @Html.TextBoxFor(m => m.CPANDP, new { type = "number", min = "0.001", step = "0.001" })
            </div>
            <!-- Break -->
            <div class="4u 12u$(small)">
                <span>Positive Materials Identification Required:</span>
            </div>
            <div class="4u 12u$(small)">

            </div>
            <div class="4u$ 12u$(small)">
                @Html.TextBoxFor(m => m.CPMI, new { type = "number", min = "0.001", step = "0.001" })
            </div>
            <!-- Break -->
            <div class="12u$">
                <ul class="actions" style="float: right">
                    <li><input type="reset" value="Reset" /></li>
                    <li><a href="@Url.Action("SizingStep1", "Products", new { id = Model.ProductId, step = Model.SizingName })" class="button special">Back</a></li>
                    <li><input type="submit" value="Submit" class="special" disabled="disabled"/></li>
                </ul>
            </div>
        </div>


    </div>
</section>